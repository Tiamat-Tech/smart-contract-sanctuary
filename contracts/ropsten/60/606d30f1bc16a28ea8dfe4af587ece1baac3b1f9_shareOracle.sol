contract shareOracle is Ownable {
    using SafeMath for uint256;

    address public pairToken;
    address public govToken;
    address public shareToken;

    IUniswapV2Pair pairGov;
    address public uniswapV2PairGov;
    address private token0PairGov;
    address private token1PairGov;

    IUniswapV2Pair pairShare;
    address public uniswapV2PairShare;
    address private token0PairShare;
    address private token1PairShare;

    constructor(
        address _factory,
        address _shareToken,
        address _govToken,
        address _pairToken
    ) public {
        shareToken = _shareToken;
        govToken = _govToken;
        pairToken = _pairToken;
        // Get a uniswap pair for the gov token
        uniswapV2PairGov = IUniswapV2Factory(_factory)
            .getPair(_pairToken, _govToken);
        // Get a uniswap pair for this new token
        uniswapV2PairShare = IUniswapV2Factory(_factory)
            .getPair(_govToken, _shareToken);
        // set Pair Contract
        setPairContract(uniswapV2PairGov, uniswapV2PairShare);

    }

    // set Pair Contract
    function setPairContract(address _pairGovContract, address _pairShareContract) public onlyOwner {
        require(_pairGovContract != address(0), 'PairOracle: is the zero address');
        require(_pairShareContract != address(0), 'PairOracle: is the zero address');

        IUniswapV2Pair _pairGov = IUniswapV2Pair(_pairGovContract);
        if (govToken == _pairGov.token0()) {
            pairToken = _pairGov.token1();
        } else {
            require(govToken == _pairGov.token1(), 'PairOracle: INVALID_TOKEN');
            pairToken = _pairGov.token0();
        }
        pairGov = _pairGov;
        uniswapV2PairGov = _pairGovContract;
        token0PairGov = _pairGov.token0();
        token1PairGov = _pairGov.token1();

        IUniswapV2Pair _pairShare = IUniswapV2Pair(_pairShareContract);
        if (govToken == _pairShare.token0()) {
            require(shareToken == _pairShare.token1(), 'PairOracle: INVALID_TOKEN');
        } else {
            require(govToken == _pairShare.token1(), 'PairOracle: INVALID_TOKEN');
            require(shareToken == _pairShare.token0(), 'PairOracle: INVALID_TOKEN');
        }
        pairShare = _pairShare;
        uniswapV2PairShare = _pairShareContract;
        token0PairShare = _pairShare.token0();
        token1PairShare = _pairShare.token1();
    }

    // given an input amount of an asset and pair reserves, returns the maximum output amount of the other asset
    function consult(uint256 amountIn) external view returns (uint256 amountOut) {
        require(amountIn > 0, 'PairOracle: INSUFFICIENT_INPUT_AMOUNT');

        IUniswapV2Pair _pairShare = IUniswapV2Pair(uniswapV2PairShare);

        (uint reserves0share, uint reserves1share, ) = _pairShare.getReserves();
        (uint reserveInShare, uint reserveOutShare) = govToken == token1PairShare ? (reserves0share, reserves1share) : (reserves1share, reserves0share);

        uint shareNumerator = amountIn.mul(reserveOutShare);
        uint shareDenominator = reserveInShare.add(amountIn);
        uint256 amountGovIn = shareNumerator / shareDenominator;

        IUniswapV2Pair _pairGov = IUniswapV2Pair(uniswapV2PairGov);

        (uint reserves0gov, uint reserves1gov, ) = _pairGov.getReserves();
        (uint reserveInGov, uint reserveOutGov) = govToken == token0PairGov ? (reserves0gov, reserves1gov) : (reserves1gov, reserves0gov);

        uint govNumerator = amountGovIn.mul(reserveOutGov);
        uint govDenominator = reserveInGov.add(amountGovIn);
        amountOut = govNumerator / govDenominator;
   }
}