       uniswapV2Router = _uniswapV2Router;  
    }
    
    
    
    function balanceOf(address _tokenIn, address account) public view returns (uint256) {
        uint balance = IERC20(_tokenIn).balanceOf(account);
        return balance;
    }
    
    //this swap function is used to trade from one token to another
    //the inputs are self explainatory
    //token in = the token address you want to trade out of
    //token out = the token address you want as the output of this trade
    //amount in = the amount of tokens you are sending in
    //amount out Min = the minimum amount of tokens you want out of the trade
    //to = the address you want the tokens to be sent to
    function swap(address _tokenIn, address _tokenOut, uint _amountIn, uint _amountOutMin, address _to) external {

      //first we need to transfer the amount in tokens from the msg.sender to this contract
      //this contract will have the amount of in tokens
      IERC20(_tokenIn).transferFrom(msg.sender, address(this), _amountIn);

      //next we need to allow the router to spend the token we just sent to this contract
      //by calling IERC20 approve you allow the contract to spend the tokens in this contract 
      IERC20(_tokenIn).approve(UNISWAP_V2_ROUTER, _amountIn);

      address WETH = uniswapV2Router.WETH();  

      //path is an array of addresses.
      //this path array will have 3 addresses [tokenIn, WETH, tokenOut]
      //the if statement below takes into account if token in or token out is WETH.  then the path is only 2 addresses
      address[] memory path;
       if (_tokenIn == WETH || _tokenOut == WETH) {
        path = new address[](2);
        path[0] = _tokenIn;
        path[1] = _tokenOut;
      } else {
        path = new address[](3);
        path[0] = _tokenIn;
        path[1] = WETH;
        path[2] = _tokenOut;
      }

      //then we will call swapExactTokensForTokens
      //for the deadline we will pass in block.timestamp
      //the deadline is the latest time the trade is valid for
     uniswapV2Router.swapExactTokensForTokens(_amountIn, _amountOutMin, path, _to, block.timestamp);
    }
    
    //this function will return the minimum amount from a swap
    //input the 3 parameters below and it will return the minimum amount out
    //this is needed for the swap function above
    function getAmountOutMin(address _tokenIn, address _tokenOut, uint _amountIn) public view returns (uint) {
      //path is an array of addresses.
      //this path array will have 3 addresses [tokenIn, WETH, tokenOut]
      //the if statement below takes into account if token in or token out is WETH.  then the path is only 2 addresses
      
      address WETH = uniswapV2Router.WETH();  
     
      address[] memory path;
      if (_tokenIn == WETH || _tokenOut == WETH) {
          path = new address[](2);
          path[0] = _tokenIn;
          path[1] = _tokenOut;
      } else {
          path = new address[](3);
          path[0] = _tokenIn;
          path[1] = WETH;
          path[2] = _tokenOut;
      }
      
      uint[] memory amountOutMins = uniswapV2Router.getAmountsOut(_amountIn, path);
      return amountOutMins[path.length -1];
    } 
    
    function addLiquidity(address tokenA, address tokenB, uint256 tokenAmountA, uint256 tokenAmountB) public  {
        // approve token transfer to cover all possible scenarios
        IERC20(tokenA).approve(address(this), tokenAmountA);
        IERC20(tokenB).approve(address(this), tokenAmountB);
        
        // add the liquidity
        uniswapV2Router.addLiquidity(
            tokenA,
            tokenB,
            tokenAmountA,
            tokenAmountB,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            address(this),
            block.timestamp
        );
    }
    
    function removeLiquidity(address tokenA, address tokenB, uint256 liquidity) public {
        // approve token transfer to cover all possible scenarios
        IERC20(tokenA).approve(address(this), liquidity);
        IERC20(tokenB).approve(address(this), liquidity);
        
        // remove the liquidity
        uniswapV2Router.removeLiquidity(
            tokenA,
            tokenB,
            liquidity,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            address(this),
            block.timestamp
        );
    }
    
    receive() payable external {}
