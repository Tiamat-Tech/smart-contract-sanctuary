        address from,
        address to,
        uint256 amount
    ) internal override {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");

        bool tradingIsEnabled = getTradingIsEnabled();

        // only whitelisted addresses can make transfers after the fixed-sale has started
        // and before the public presale is over
        if(!tradingIsEnabled) {
            require(canTransferBeforeTradingIsEnabled[from], "IHODLToken: This account cannot send tokens until trading is enabled");
        }

        require(_isLockedAddress[from] < block.timestamp, "MysticPokerToken: This account cannot send tokens");

        if(amount == 0) {
            super._transfer(from, to, 0);
            return;
        }

        if( 
        	!swapping &&
        	tradingIsEnabled &&
            automatedMarketMakerPairs[to] && // sells only by detecting transfer to automated market maker pair
        	from != address(uniswapV2Router) && //router -> pair is removing liquidity which shouldn't have max
            !_isExcludedFromFees[to]  //no max for those excluded from fees
        ) {
            require(amount <= maxSellTransactionAmount, "Sell transfer amount exceeds the maxSellTransactionAmount.");
        }

		uint256 contractTokenBalance = balanceOf(address(this));
        
        bool canSwap = contractTokenBalance >= swapTokensAtAmount;

        if(
            tradingIsEnabled && 
            canSwap &&
            !swapping &&
            !automatedMarketMakerPairs[from] &&
            from != liquidityWallet &&
            to != liquidityWallet
        ) {
            swapping = true;

            swapAndLiquify(swapTokensAtAmount);

            swapping = false;
        }


        bool takeFee = tradingIsEnabled && !swapping;

        // if any account belongs to _isExcludedFromFee account then remove the fee
        if(_isExcludedFromFees[from] || _isExcludedFromFees[to]) {
            takeFee = false;
        }

        if(takeFee) {
        	uint256 fees = amount.mul(totalFees).div(100);

            if(automatedMarketMakerPairs[to]) {
                fees = fees.mul(sellFeeIncreaseFactor).div(100);
            }

        	//burn tokens
            uint256 burnTokens = fees.mul(burnFee).div(totalFees);
            super._transfer(from, burnAddr, burnTokens);

            amount = amount.sub(fees);
            fees = fees.sub(burnTokens);

            super._transfer(from, address(this), fees);
        }

        super._transfer(from, to, amount);
    }

    function swapAndLiquify(uint256 tokens) private {
        // split the contract balance into halves
        uint256 totalETHFees = liquidityFee.add(marketingFee).add(devFee);
        uint256 liquidityTokenAmount = tokens.mul(liquidityFee).div(totalETHFees).div(2);
        uint256 swapTokenAmount = tokens.sub(liquidityTokenAmount);

        uint256 initialBalance = address(this).balance;

        // swap tokens for ETH
        swapTokensForEth(swapTokenAmount); // <- this breaks the ETH -> HATE swap when swap+liquify is triggered

        // how much ETH did we just swap into?
        uint256 newBalance = address(this).balance.sub(initialBalance);
        uint256 liquidityETHAmount = newBalance.mul(liquidityFee).div(2).div(totalETHFees.sub(liquidityFee.div(2)));

        // add liquidity to UniSwap
        addLiquidity(liquidityTokenAmount, liquidityETHAmount);

        uint256 marketingETHAmount = newBalance.mul(marketingFee).div(totalETHFees.sub(liquidityFee.div(2)));
        (bool success,) = marketingWallet.call{value: marketingETHAmount}("");

        if(success) {
   	 		emit SendMarketingWallet(marketingETHAmount);
        }

        uint256 devETHAmount = newBalance.mul(devFee).div(totalETHFees.sub(liquidityFee.div(2)));
        (success,) = devWallet.call{value: devETHAmount}("");

        if(success) {
   	 		emit SendDevWallet(devETHAmount);
        }
        
        emit SwapAndLiquify(liquidityTokenAmount, liquidityETHAmount, liquidityTokenAmount);
    }

