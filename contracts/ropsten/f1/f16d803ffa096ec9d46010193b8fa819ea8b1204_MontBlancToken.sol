contract MontBlancToken is ERC20, AccessControl, Ownable, Pausable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    //유저 지갑
    address public user = payable(msg.sender);

    //토큰 생성/폐기 권한 암호화
    bytes32 public constant MINTER_ROLE = keccak256("MINTER");
    bytes32 public constant BURNER_ROLE = keccak256("BURNER");

    //발행하는 토큰 수
    uint public INITIAL_SUPPLY = 21000000;

    //Airdrop 받은 총합 기록
    mapping (address => uint256) public airDropHistory;     
    event AirDrop(address _to, uint256 _amount);

    //발행 더이상 못하게 하기
    event MintFinished();
    bool private _mintingFinished = false;

    modifier canMint() {
        require(!_mintingFinished);
        _;
    }

    //락업 구조체
    struct lockAllowance {
        uint256 total;
        uint256 allowance;
        uint lockStage;
    }
    bool public released = false;
    bool public isLocked = false;
    address public lockedOwner;   //락업 지갑 주인
    uint256 createdAt;  //토큰 만들어진 시간
    mapping(address => lockAllowance) lockAllowances;   //각 지갑에 락업정보 배열로 매칭

    modifier canTransfer() {
        if(!released) {
            require(lockedOwner == msg.sender, "you are not permitted to transfer");
        }
        _;
    }

    //락업 해제수량 업데이트
    modifier investorChecks() {
        if(!released) {
            updateLockAllowances();
        }
        _;
    }

    constructor() public ERC20("MontBlanc Token", "MBT") {
        address master = msg.sender;    //지갑 주인
        lockedOwner = payable(msg.sender);

        _setupRole(MINTER_ROLE, master);
        _setupRole(BURNER_ROLE, master);
        _setupRole(DEFAULT_ADMIN_ROLE, master);

        _mint(master, INITIAL_SUPPLY * 10 ** (uint(decimals())));

        createdAt = block.timestamp;
        setReleaser(master);    //락업 권한 부여
        addToLock(INITIAL_SUPPLY, master);  //락업 설정
    }

    //발행 더 할 수 있게 해놨는지 여부
    function mintingFinished() public view returns (bool) {
        return _mintingFinished;
    }

    //발행 마감
    function finishMinting() public onlyOwner canMint {
        _mintingFinished = true;
        
        emit MintFinished();
    }

    //토큰 발행
    function mint(address to, uint256 amount) public canMint onlyRole(MINTER_ROLE){
        // require(hasRole(MINTER_ROLE, msg.sender), "Caller is not a minter);
        _mint(to, amount);
    }

    //토큰 제거
    function burn(address from, uint256 amount) public onlyRole(BURNER_ROLE) {
        // require(hasRole(BURNER_ROLE, msg.sender), "Caller is not a burner);
        _burn(from, amount);
    }


    //잔액 - 소수점 제거
    function int_BalanceOf(address account) public view returns(uint256) {
        return balanceOf(account)/(10 ** (uint(decimals())));
    }

    //거래 일시정지
    function pause() public virtual whenNotPaused {
        _pause();
    }
    function unpause() public virtual whenPaused {
        _unpause();
    }

    //토큰 전송
    function transfer(address _to, uint256 _amount) public virtual override canTransfer investorChecks returns (bool) {
        lockAllowance storage lock = lockAllowances[msg.sender];

        require(balanceOf(user) >= _amount);    //유저 잔액이 전송금액보다 커야 함
        require(balanceOf(_to) + _amount >= balanceOf(_to));    //토큰 전송받은 사람 잔액이 전송 후 더 적어지면 안됨
        require((balanceOf(lockedOwner) - _amount) >= (lock.total - lock.allowance) * (10 ** (uint(decimals()))));

        _transfer(_msgSender(), _to, _amount);

        return true;
    }

    //토큰 전송 - 소수점 제거
    function int_transfer(address _to, uint256 int_amount) public virtual canTransfer investorChecks returns (bool) {
        uint256 amount_ = int_amount * (10 ** (uint(decimals())));
        lockAllowance storage lock = lockAllowances[msg.sender];

        // require(balanceOf(user) >= amount_);
        require(balanceOf(lockedOwner) >= amount_);
        require(balanceOf(_to) + amount_ >= balanceOf(_to));
        require((balanceOf(lockedOwner) - amount_) >= (lock.total - lock.allowance) * (10 ** (uint(decimals()))));
        
        _transfer(_msgSender(), _to, amount_);
        return true;
    }

    //에어드랍 - 여러명에게 같은 양 전송
    function dropToken_same(address[] memory receivers, uint256 amount) public {
        require(receivers.length != 0);

        for(uint256 i = 0; i < receivers.length; i++) {
            address receiver = receivers[i];

            transfer(receiver, amount);
            airDropHistory[receiver] += amount/(10 ** (uint(decimals())));

            emit AirDrop(receiver, amount);
        }
    }

    //에어드랍 - 여러명에게 다른 양 전송
    function dropToken_various(address[] memory receivers, uint256[] memory values) public {
        require(receivers.length != 0);
        require(receivers.length == values.length);

        for(uint256 i = 0; i < receivers.length; i++) {
            address receiver = receivers[i];
            uint256 amount = values[i];

            transfer(receiver, amount);
            airDropHistory[receiver] += amount/(10 ** (uint(decimals())));

            emit AirDrop(receiver, amount);
        }
    }

    /////////락업 관련
    //전송 가능하게 토큰 release
    function releaseTokenTransfer() public onlyOwner {
        released = true;
    }

    //락업 지갑 주인 새로 설정
    function setReleaser(address _lockedOwner) public onlyOwner {
        lockedOwner = _lockedOwner;
    }

    //view를 위한 업데이트
    function UpdateToView() public {
        updateLockAllowances();
    }

    //allowance 테스트 출력
    function viewAllowance() public view returns (uint256) {
        lockAllowance storage lock = lockAllowances[msg.sender];

        return lock.allowance;
    }

    //경과 시간 테스트 출력
    function viewBlockTimestamp() public view returns (uint256) {
        return block.timestamp - createdAt;
    }

    //락업 설정
    function addToLock(uint256 _total, address _user) public onlyOwner {
        if (!isLocked){
            lockAllowance memory lock;
            lock.total = _total;
            lock.allowance = 1000000;
            lock.lockStage = 1;
            lockAllowances[_user] = lock;
            isLocked = true;
        } else {
            updateLockTotal(_total);
        }
    }

    //락업 총량 업데이트
    function updateLockTotal(uint256 _total) internal returns (bool) {
        lockAllowance storage lock = lockAllowances[msg.sender];
        lock.total = lock.total + _total;

        return true;
    }

    //시간경과에 따라 전송 가능량 업데이트
    function updateLockAllowances() internal returns (bool) {
        lockAllowance storage lock = lockAllowances[lockedOwner];
        if(createdAt + 2 minutes <= block.timestamp && createdAt + 4 minutes > block.timestamp) {
            lock.allowance = 4000000;
        } else if(createdAt + 4 minutes <= block.timestamp && createdAt + 6 minutes > block.timestamp) {
            lock.allowance = 7000000;
        } else if(createdAt + 6 minutes <= block.timestamp && createdAt + 8 minutes > block.timestamp) {
            lock.allowance = 10000000;
        } else if(createdAt + 8 minutes <= block.timestamp && createdAt + 10 minutes > block.timestamp) {
            lock.allowance = 13000000;
        } else if(createdAt + 10 minutes <= block.timestamp && createdAt + 12 minutes > block.timestamp) {
            lock.allowance = 16000000;
        } else if(createdAt + 12 minutes <= block.timestamp && createdAt + 14 minutes > block.timestamp) {
            lock.allowance = 1900000;
        } else if(createdAt + 14 minutes <= block.timestamp) {
            lock.allowance = 21000000;
            released = true;
        }
        return true;
    }
}