contract Bridge is Operator, Pausable {

    using SafeMath for uint256;

    IToken public bridgedToken;
    uint public nonce;
    mapping(uint => bool) public processedNonces;

    uint public contractDeployTime;

    uint public bridgeFees;
    address payable feesReceiver;

    enum Step { Deposit, Withdraw }
    event Deposit(address from, address to, uint amount, uint date, uint nonce);
    event Withdraw(address from, address to, uint amount, uint date, uint nonce);

    constructor(address _bridgedToken, address payable addressFeesReceiver) public {

        bridgedToken = IToken(_bridgedToken);
        contractDeployTime = block.timestamp;

        bridgeFees = 3000000000000000 wei;
        feesReceiver = addressFeesReceiver;
    }

    // take fee in wei to compensate tx cost
    modifier feesPaid {
        if (msg.value != bridgeFees) {
            revert("You must pay the exact fees to run the swap");
        } else {
            feesReceiver.transfer(msg.value);
            _;
        }
    }

    // set the new feesReceiver
    function setFeesReceiverAddress(address payable newReceiver) public onlyOperator {
       require(newReceiver != address(this));
        feesReceiver = newReceiver;
    }

    // set new bridge fees in case of higher gas cost
    function setBridgeFees(uint newFees) public onlyOperator {
        require(newFees <= 30000000000000000 wei); // max fees are 10x more than the original fees
        bridgeFees = newFees;
    }

    // pause or unpause deposits in case of a problem or a min stop in the other side
    function pauseTransfer() external onlyOperator {
        _pause();
    }

    function unpauseTransfer() external onlyOperator {
        _unpause();
    }

    // set the new bridged token
    function setToken(address _newToken) public onlyOperator {
        bridgedToken = IToken(_newToken);
    }

    // deposit bridged (then burn) and emit the event to the other side
    function deposit(address to, uint amount) external payable feesPaid whenNotPaused {

        bridgedToken.burnFrom(msg.sender, amount);
        emit Deposit(            
            msg.sender,
            to,
            amount,
            block.timestamp,
            nonce
        );
        nonce++;
    }

    // withdraw bridged (mint) token from an event on the other side
    function withdraw(address to, uint amount, uint otherChainNonce) external onlyOperator {

        require(processedNonces[otherChainNonce] == false, 'transfer already processed');
        processedNonces[otherChainNonce] = true;
        bridgedToken.mint(to, amount);
        emit Withdraw(
            msg.sender,
            to,
            amount,
            block.timestamp,
            otherChainNonce
        );
    }


    // function to allow owner to claim *other* Old ERC20 tokens sent to this contract
    function transferAnyOldERC20Token(address _tokenAddr, address _to, uint _amount) public onlyOperator {
        OldIERC20(_tokenAddr).transfer(_to, _amount);
    }

    function transferAnyERC20Token(address _tokenAddr, address _to, uint _amount) public onlyOperator {
        require(Token(_tokenAddr).transfer(_to, _amount), "Could not transfer out tokens!");
    }

}