contract PoolV2 is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many PROFIT tokens the user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
        //
        // We do some fancy math here. Basically, any point in time, the amount of WETHs
        // entitled to a user but is pending to be distributed is:
        //
        //   pending reward = (user.amount * accWETHPerShare) - user.rewardDebt
        //
        // Whenever a user deposits or withdraws PROFIT tokens to a pool. Here's what happens:
        //   1. The pool's `accWETHPerShare` (and `lastRewardBlock`) gets updated.
        //   2. User receives the pending reward sent to his/her address.
        //   3. User's `amount` gets updated.
        //   4. User's `rewardDebt` gets updated.
    }
    // Info of the pool.
    struct PoolInfo {
        IERC20 ProfitToken; // Address of PROFIT token contract.
        uint256 lastRewardBlock; // Last block number that WETHs distribution occurs.
        uint256 accWETHPerShare; // Accumulated WETHs per share, times 1e12.
    }
    
    PoolInfo[] public poolInfo;
    
    /** @notice Divisor. This plays an important
     *  role in determining the amount of ETH that
     *  will be distributed per block from the
     *  total ETH balance of the pool.
     */
    uint256 divisor = 100000; // This is 0.001% of the total ETH in the pool.

    // The REWARD TOKEN!
    IERC20 public WETH;
    // Info of each user that stakes PROFIT tokens.
    mapping(address => UserInfo) public userInfo;
    event Deposit(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 amount);

    constructor(
        IERC20 _WETH,
        IERC20 _ProfitToken,
        bool _withUpdate
    ) {
        WETH = _WETH;
        uint256 _lastRewardBlock = block.number;
        poolInfo.push(
            PoolInfo({
                ProfitToken: _ProfitToken,
                lastRewardBlock: _lastRewardBlock,
                accWETHPerShare: 0
            })
        );
        if (_withUpdate) {
            update(0);
        }
    }

    // View function to see pending WETHs on frontend.
    function pendingWETH(uint256 _pid, address _user) external view returns (uint256) {
        PoolInfo memory pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_user];
        uint256 blocks = block.number.sub(pool.lastRewardBlock);
        uint256 accWETHPerShare = pool.accWETHPerShare;
        uint256 lpSupply = pool.ProfitToken.balanceOf(address(this));
        if (block.number > pool.lastRewardBlock && lpSupply != 0) {
            uint256 WETHBal = WETH.balanceOf(address(this));
            uint256 WETHReward = blocks.mul(WETHBal).div(divisor);
            accWETHPerShare = accWETHPerShare.add(
                WETHReward.mul(1e12).div(lpSupply)
            );
        }
        return user.amount.mul(accWETHPerShare).div(1e12).sub(user.rewardDebt);
    }

    /** @notice Update reward variables of the pool.
     */
    function update(uint256 _pid) public view {
        PoolInfo memory pool = poolInfo[_pid];
        if (block.number <= pool.lastRewardBlock) {
            return;
        }
        uint256 accWETHPerShare = pool.accWETHPerShare;
        uint256 lpSupply = pool.ProfitToken.balanceOf(address(this));
        if (lpSupply == 0) {
            pool.lastRewardBlock = block.number;
            return;
        }
        uint256 blocks = block.number.sub(pool.lastRewardBlock);
        uint256 WETHBal = WETH.balanceOf(address(this));
        uint256 WETHReward = blocks.mul(WETHBal).div(divisor);
        accWETHPerShare = accWETHPerShare.add(
            WETHReward.mul(1e12).div(lpSupply)
        );
        pool.lastRewardBlock = block.number;
    }

    // Deposit PROFIT tokens to Pool to get rewarded with ETH.
    function deposit(uint256 _pid, uint256 _amount) public {
        PoolInfo memory pool = poolInfo[_pid];
        UserInfo storage user = userInfo[msg.sender];
        update(_pid);
        if (user.amount > 0) {
            uint256 pending = user.amount.mul(pool.accWETHPerShare).div(1e12).sub(user.rewardDebt);
            safeWETHTransfer(msg.sender, pending);
        }
        pool.ProfitToken.safeTransferFrom(
            address(msg.sender),
            address(this),
            _amount
        );
        user.amount = user.amount.add(_amount);
        user.rewardDebt = user.amount.mul(pool.accWETHPerShare).div(1e12);
        emit Deposit(msg.sender, _amount);
    }

    /** @notice Harvest Function is a funtion that allows
     *  the user to harvest pending ETH rewards without unstaking.
     *  It simply a funtion that calls the deposit
     *  function with zero deposit amount.
     */
    function harvest() public {
        deposit(0,0);
    }

    /** @notice Withdraw PROFIT tokens from Pool and harvest pending ETH rewards.
     *  @param _amount PROFIT token amount to withdraw.
     */
    function withdraw(uint256 _pid ,uint256 _amount) public {
        PoolInfo memory pool = poolInfo[_pid];
        UserInfo storage user = userInfo[msg.sender];
        require(user.amount >= _amount, 'withdraw: not good');
        update(_pid);
        uint256 pending = user.amount.mul(pool.accWETHPerShare).div(1e12).sub(user.rewardDebt);
        // Interactions
        safeWETHTransfer(msg.sender, pending);
        // Effects
        user.amount = user.amount.sub(_amount);
        user.rewardDebt = user.amount.mul(pool.accWETHPerShare).div(1e12);
        // Interactions
        pool.ProfitToken.safeTransfer(address(msg.sender), _amount);
        emit Withdraw(msg.sender, _amount);
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) public {
        PoolInfo memory pool = poolInfo[_pid];
        UserInfo storage user = userInfo[msg.sender];
        pool.ProfitToken.safeTransfer(address(msg.sender), user.amount);
        emit EmergencyWithdraw(msg.sender, user.amount);
        user.amount = 0;
        user.rewardDebt = 0;
    }

    // Safe WETH transfer function, just in case if rounding error causes pool to not have enough WETHs.
    function safeWETHTransfer(address _to, uint256 _amount) internal {
        uint256 WETHBal = WETH.balanceOf(address(this));
        if (_amount > WETHBal) {
            WETH.safeTransfer(_to, WETHBal);
        } else {
            WETH.safeTransfer(_to, _amount);
        }
    }

    function setDivisor(uint256 _divisor) public onlyOwner {
        divisor = _divisor;
    }
}