pragma solidity ^0.6.2;

contract Owned{
    address public owner;

    constructor() public {
        owner = msg.sender;
    }

    modifier onlyOwner {
        require(msg.sender == owner);
        _;
    }

    function transferOwnership(address newOwner) onlyOwner public {
        owner = newOwner;
    }
}

contract Renew is Owned{
    uint public price=0.002 ether;
    
    event renewFund(address user,uint period, uint amount);
    
    constructor () public {}
    
    function renew(uint period) external payable {
        require(msg.value == period * price);
        emit renewFund(msg.sender, period, msg.value);
    }
    
    function setPrice(uint _price) public onlyOwner{
        price = _price;
    }
    
    function withdrawBalance(address cfoAddr) external onlyOwner{
        uint256 balance = address(this).balance;
        address payable _cfoAddr = address(uint160(cfoAddr));
        _cfoAddr.transfer(balance);
    }

}