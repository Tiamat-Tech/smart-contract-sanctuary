contract PreSale is Ownable {
    using SafeMath for uint;
    address[] public specialAddress;
    mapping (address=>bool) public isSpecialAddress;
     mapping (address=>uint) public saleNftCount;
     uint public saleStartTime;
     uint8 public maxNum = 10;
     uint public price = 1*1e17;
     function setPrice(uint num) public onlyOwner{
       price =num;
     }
     function setPrice(uint8 num) public onlyOwner{
       maxNum =num;
     }
    function setSpecialAddress(address addr) public onlyOwner{
        require(address(0) != addr);
        require(!isSpecialAddress[addr],'Address already exists');
        specialAddress.push(addr);
        isSpecialAddress[addr] = true;
    } 
    //是否是提前预售地址
    function getSpecialAddress(address addr) public view returns(bool) {
         for(uint256 i=0;i<specialAddress.length;i++){
             if(specialAddress[i] == addr){
                   return true;
             }
        }
        return false;
    }
   address public receivingAddress;
     constructor (address _address,uint saleStartTime_) public{
        receivingAddress = _address;
        saleStartTime = saleStartTime_;
     }
     modifier checkStart() {
        require(block.timestamp >= saleStartTime, 'not start');
        _;
    }
    function sale(uint8 num) public checkStart payable{
         require(num <= maxNum,'Exceed maximum');
         require(getSpecialAddress(msg.sender),'Not qualified');
        saleNftCount[msg.sender] = saleNftCount[msg.sender].add(num);
        payable(receivingAddress).transfer(price.mul(num));
    }
}