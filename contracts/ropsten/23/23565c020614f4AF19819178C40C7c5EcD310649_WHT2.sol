contract LockedStorage {
  using SafeMath for uint256;

  struct UserBalance {
    uint256 balance;
    uint256 index;
    uint256 timeToWithdraw;
  }

  struct Internal {
    uint256 length;
    mapping(address => UserBalance) balances;
    mapping(uint256 => address) indexes;
  }

  Internal private store;
  uint256 private timeLock;

  constructor(uint256 _timeLock) {
    timeLock = _timeLock;
  }

  function setTimeLock(uint256 _timeLock) public {
    timeLock = _timeLock;
  }

  function addLiquidity(address owner, uint256 amount) public {
    if (store.balances[owner].balance == 0) {
      store.balances[owner].index = store.length;
      store.indexes[store.length] = owner;
      store.length = store.length.add(1);
    }

    store.balances[owner].timeToWithdraw = timeLock.add(block.timestamp);
    store.balances[owner].balance = store.balances[owner].balance.add(amount);
  }

  function removeLiquidity(address owner, uint256 amount) public {
    require(store.balances[owner].balance >= amount, "Insufficiant amount");
    require(store.balances[owner].timeToWithdraw <= block.timestamp, "Not allowed to withdraw");

    store.balances[owner].balance = store.balances[owner].balance.sub(amount);

    if (store.balances[owner].balance == 0) {
      uint256 indexOwner = store.balances[owner].index;

      delete store.balances[owner];
      delete store.indexes[indexOwner];
      store.length = store.length.sub(1);
    }
  }

  function getTotalLockedLiquidity() public view returns(uint256) {
    uint256 total = 0;

    for (uint256 i = 0; i < store.length; i++) {
      address owner = store.indexes[i];

      total = total.add(store.balances[owner].balance);
    }

    return total;
  }

  function getLiquidityProviderList() public view returns(address[] memory) {
    address[] memory list = new address[](store.length);

    for (uint256 i = 0; i < store.length; i = i.add(1)) {
      address owner = store.indexes[i];

      list[i] = owner;
    }

    return list;
  }

  function getLockedLiquidity(address owner) public view returns(uint256) {
    return store.balances[owner].balance;
  }

  function canWithdraw(address owner) public view returns(bool) {
    return store.balances[owner].timeToWithdraw <= block.timestamp;
  }
}

contract WHT2 is ERC20Upgradeable, OwnableUpgradeable, ERC20BurnableUpgradeable {
  using SafeMath for uint256;

  address public factory;
  address public router;
  address public usd;

  event Locked(address from, uint256 amount);
  event Unlocked(address to, uint256 amount);
  event LockTime(uint256 newTimeLock);
  event RewardDispatched(uint256 amount, uint256 totalLockedLiquidity, address[] receiverList);

  LockedStorage private lockedStorage;

  function initialize(
    uint256 initialSupply,
    address _factory,
    address _router,
    address _usd
  ) public initializer {
    __ERC20_init("WHT2 token", "WHT2");
    __Ownable_init();
    factory = _factory;
    router = _router;
    usd = _usd;
    lockedStorage = new LockedStorage(4 weeks);
    _mint(_msgSender(), initialSupply);
  }

  function setFactory(address _factory) external onlyOwner {
    factory = _factory;
  }

  function setRouter(address _router) external onlyOwner {
    router = _router;
  }

  function setUsd(address _usd) external onlyOwner {
    usd = _usd;
  }

  function setTimeLock(uint256 _timeLock) external onlyOwner {
    lockedStorage.setTimeLock(_timeLock);
    emit LockTime(_timeLock);
  }

  function generateReward(uint256 paidProfits) external onlyOwner {
    address pair = IPancakeFactory(factory).getPair(usd, address(this));

    require(pair != address(0), "Pair must exist");

    address[] memory contractAddressList = new address[](2);
    contractAddressList[0] = usd;
    contractAddressList[1] = address(this);

    uint256[] memory dollarValues = IPancakeRouter01(router).getAmountsOut(1e18, contractAddressList);
    uint256 tokenToDispatch = dollarValues[0].mul(paidProfits);

    _mint(address(this), tokenToDispatch);

    address[] memory liquidityProviders = lockedStorage.getLiquidityProviderList();
    uint256 totalLockedLiquidity = lockedStorage.getTotalLockedLiquidity();

    for (uint256 i = 0; i < liquidityProviders.length; i++) {
      uint256 amountLiquidity = lockedStorage.getLockedLiquidity(liquidityProviders[i]);
      uint256 percentOwned = amountLiquidity.mul(100).div(totalLockedLiquidity);
      uint256 amountReceiving = percentOwned.mul(totalLockedLiquidity).div(100);

      lockedStorage.addLiquidity(liquidityProviders[i], amountReceiving);
    }

    emit RewardDispatched(tokenToDispatch, totalLockedLiquidity, liquidityProviders);
  }

  function lockWhali(uint256 amount) external {
    require(balanceOf(_msgSender()) >= amount, "Insufficient funds");

    transfer(address(this), amount);
    lockedStorage.addLiquidity(_msgSender(), amount);

    emit Locked(_msgSender(), amount);
  }

  function unlockWhali(uint256 amount) external {
    uint256 amountLiquidity = lockedStorage.getLockedLiquidity(_msgSender());

    require(amountLiquidity >= amount, "Insufficient funds");
    require(lockedStorage.canWithdraw(_msgSender()), "Still locked");

    lockedStorage.removeLiquidity(_msgSender(), amount);
    transfer(_msgSender(), amount);

    emit Unlocked(_msgSender(), amount);
  }

  function liquidityLocked() external view returns(uint256) {
    return lockedStorage.getLockedLiquidity(_msgSender());
  }

  function totalLiquidityLocked() external view returns(uint256) {
    return lockedStorage.getTotalLockedLiquidity();
  }
}