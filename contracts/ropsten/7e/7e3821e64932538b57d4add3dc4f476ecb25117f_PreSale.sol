contract PreSale is Ownable {
    using SafeMath for uint256;

    uint256 constant _minDeposit = 0.001 ether;
    string _name;
    mapping(address => uint256) _balances;
    uint256 _capacity;
    // it might be useful yet
    // uint256 _totalBalance;
    bool _active;

    event SaleFinished(address sender, uint256 value, uint256 balance);
    event SaleStarted();
    event BalanceChanged(address sender, uint256 value, uint256 balance);

    constructor(string memory name, uint256 capacity) {
        _name = name;
        _capacity = capacity;
    }

    function deposit() external payable whenActive {
        require(msg.value >= _minDeposit, 'Value less than minimal deposit');
        _balances[msg.sender] = _balances[msg.sender].add(msg.value);
        //_totalBalance = _totalBalance.add(msg.value);
        postDeposit(msg.sender, msg.value);
    }

    function internalDeposit(uint256 value) external onlyOwner whenActive {
        (, _capacity) = _capacity.trySub(value);
        postDeposit(msg.sender, value);
    }

    function postDeposit(address sender, uint256 value) internal {
        if (address(this).balance >= _capacity) {
            _active = false;
            emit SaleFinished(sender, value, address(this).balance);
        } else {
            emit BalanceChanged(sender, value, address(this).balance);
        }
    }

    function startSale() external onlyOwner whenNotActive {
        _active = true;
        emit SaleStarted();
    }

    function closeSale() external onlyOwner whenActive {
        _active = false;
        emit SaleFinished(msg.sender, 0, address(this).balance);
    }

    function getBalance() public view returns (uint256) {
        return address(this).balance;
    }

    function balanceOf(address account) public view returns (uint256) {
        return _balances[account];
    }

    function isSaleActive() public view returns (bool) {
        return _active;
    }

    function withdraw(uint256 amount) external onlyOwner whenNotActive {
        require(address(this).balance >= amount);
        if (amount == 0) {
            amount = address(this).balance;
        }
        payable(msg.sender).transfer(amount);
    }

    modifier whenActive() {
        require(_active, "Sale is not active");
        _;
    }

    modifier whenNotActive() {
        require(!_active, "Sale is active");
        _;
    }
}