// Chain shaped ponzi
contract SuperPrize is Ownable{

    event Received(address caller, uint amount, string message);

    using SafeMath for uint;

    address[] public  _contractOwner;

    struct User {
        address payable addr;
        uint amount;
    }

    User[] public users;
    uint public currentlyPaying = 0;
    uint public totalUsers = 0;
    uint public totalWei = 0;
    uint public totalPayout = 0;
    bool public active;


    //    function close() public{
//        require(msg.sender == owner, "Cannot call function unless owner");
//        require(active == true, "Contract must be active");
//        require(address(this).balance > 0, "This contract must have a balane above zero");
//        owner.transfer(address(this).balance);
//        active = false;
//    }

    // onlySmartcontract
    modifier onlyContract() {
        bool _checkContract = false;
        for (uint i=0; i< _contractOwner.length; i++) {
            if (_contractOwner[i] == msg.sender){
                _checkContract == true;
            }
        }
        require(_checkContract == true,"Only a contract manager has access");
        _;
    }

    function updatePlayers(address payable _sender,uint _amount) external onlyContract{
        emit Received(_sender,_amount, "Update Player received");
        users.push(User(_sender, _amount));
        totalUsers += 1;
        totalWei += _amount;
    }


    receive() external payable {
        emit Received(msg.sender,msg.value, "Receive funds");

        while (address(this).balance > users[currentlyPaying].amount.mul(2)) {
            uint sendAmount = users[currentlyPaying].amount.mul(2);
            users[currentlyPaying].addr.transfer(sendAmount);
            totalPayout += sendAmount;
            currentlyPaying += 1;
        }
    }

    function setContractManager(address payable _contractAddress) external onlyOwner{
        _contractOwner.push(msg.sender);
    }

    function clearContractManager() external onlyOwner{
        _contractOwner = new address[](0);
    }

}