contract Oracle is Ownable{
     
     constructor()public{
          _setOwner(msg.sender);
     }
      uint internal price; 
      
      
       event PriceUpdated(
           uint oldPrice,
           uint newPrice,
           uint timestamp
         );
      
        
        function setPrice(uint _response) external onlyOwner {
            uint oldPrice = price;
            price = _response;
            emit PriceUpdated(oldPrice, price, block.timestamp);
        }
        
        function getPrice()external view returns(uint256){
            return price;
        }
      
       
