contract AirdropNewTokenInEth is Ownable {
    using SafeMath for uint256;
    IERC20 public tokenLSD = IERC20(0x67f39D3d23D562858af9Ef5f18a11C25F4A4C9b0);

    uint256 public totalDividend;
    uint256 public totalLsdAirdrop;
    mapping(address => uint256) public userDividend;
    mapping(address => bool) public claimed;

    bool public openToClaim;

    function claimLSD() public {
        require(openToClaim, "Not in claim period");
        require(claimed[msg.sender] == false, "You already claimed");
        claimed[msg.sender] = true;
        uint256 claimableAmount = airdropAmount(msg.sender);
        tokenLSD.transfer(msg.sender, claimableAmount);
    }

    function airdropAmount(address account)public view returns(uint256) {
        if(totalDividend > 0)
            return userDividend[account].mul(totalLsdAirdrop).div(totalDividend);
        else 
            return 0;
    }

    function setAirdropDividend(address[] calldata accounts, uint256[] calldata amount) public onlyOwner {
        for( uint256 i = 0; i < accounts.length; i++){
            userDividend[accounts[i]] = amount[i];
        }
    }

    function setupAirdrop(uint256 _totalDividend, uint256 _totalLsdAirdrop) public onlyOwner{
        totalDividend = _totalDividend;
        totalLsdAirdrop = _totalLsdAirdrop;
    }

    function setOpenToClaim(bool opened) public onlyOwner{
        openToClaim = opened;
    }
}