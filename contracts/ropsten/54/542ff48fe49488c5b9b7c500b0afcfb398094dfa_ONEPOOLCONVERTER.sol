contract ONEPOOLCONVERTER is Ownable{
    
    IERC20 public rewardtoken;
    IERC20 public nativetoken;
    IUniswapV2Router02 public router;
    address[] private pairArray;
    
    constructor(address _rewardtoken,address _nativetoken,address _router) public{
        rewardtoken = IERC20(_rewardtoken);
        nativetoken = IERC20(_nativetoken);
        router = IUniswapV2Router02(_router);
        
        pairArray.push(_rewardtoken);
        pairArray.push(_nativetoken);
    }
    
    function swap(address _userAddr,uint256 _amount) public onlyOwner returns (uint[] memory amounts){
        require(rewardtoken.balanceOf(address(this)) > 0 , "ONEPOOL_CONVERTER : insufficient amount" );
        
        amounts = router.swapExactTokensForTokens(getRewardDetails(_amount),_amount,pairArray,_userAddr,block.timestamp + 8640000);
    }
    
    function getRewardDetails(uint256 tokenbal) public view returns(uint256 exactAmount){
        uint256[] memory getData = router.getAmountsOut(tokenbal, pairArray);
        exactAmount = getData[1];
    }
    
}