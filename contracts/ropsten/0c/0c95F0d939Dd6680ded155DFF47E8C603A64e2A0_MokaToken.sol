    transfer(_creator, VOTE_PRICE * uint256(10 ** 18));
    bool success = IMokaPosts(mokaPostsContract).upvotePost(msg.sender, _creator, _uid);
    require(success, "Vote Failed");
    emit UserUpvote(msg.sender, _creator);
  }

