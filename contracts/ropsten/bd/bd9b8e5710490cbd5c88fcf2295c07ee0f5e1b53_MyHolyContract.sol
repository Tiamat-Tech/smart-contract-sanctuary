    using SafeMath for uint256;
    
    event LoanGathered(address provider, address token, uint amount);
    event BaseBought(address pair, address token, uint amount);
    event BaseSold(address pair, address token, uint amount);

    IPancakePair private loan_provider;
    address private loan_token;
    uint private loan_amount;
    address private loan_ret_token;
    uint private loan_ret_amount;
    address private base_token;
    IPancakePair private buy_pair;
    uint private buy_amount;
    IPancakePair private sell_pair;
    uint private sell_amount;

    /**
    * @dev Creates `amount` tokens and assigns them to `msg.sender`, increasing
    * the total supply.
    *
    * Requirements
    *
    * - `msg.sender` must be the token owner
    */
    function start_arbitrage(address    loan_provider_address,
                             address    _loan_token,
                             uint       _loan_amount,
                             address    _loan_ret_token,
                             uint       _loan_ret_amount,
                             address    _base_token,
                             address    buy_pair_address,
                             uint       _buy_amount,
                             address    sell_pair_address,
                             uint       _sell_amount) public onlyOwner {
        loan_provider              = IPancakePair(loan_provider_address);
        loan_token                 = _loan_token;
        loan_amount                = _loan_amount;
        loan_ret_token             = _loan_ret_token;
        loan_ret_amount            = _loan_ret_amount;
        
