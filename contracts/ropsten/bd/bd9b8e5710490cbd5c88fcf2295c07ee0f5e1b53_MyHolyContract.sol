        buy_amount                 = _buy_amount;
        sell_pair                  = IPancakePair(sell_pair_address);
        sell_amount                = _sell_amount;
        
        if (loan_provider.token0() == loan_token)
            loan_provider.swap(loan_amount, 0, address(this), new bytes(1));
        else if (loan_provider.token1() == loan_token)
            loan_provider.swap(0, loan_amount, address(this), new bytes(1));
        else
            require(false, "Unknown token for loan provider.");
    }
  
