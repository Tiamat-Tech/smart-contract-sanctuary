    function swapTokenForAsset(address asset, uint256 tokenAmount) private {
        address[] memory path = new address[](3);
        path[0] = address(token);
        path[1] = router.WETH();
        path[2] = asset;

        router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    function swapAssetForToken(address asset, uint256 tokenAmount) private {
        address[] memory path = new address[](3);
        path[0] = asset;
        path[1] = router.WETH();
        path[2] = address(token);

        router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    function setAllocation(address asset, uint256 allocation)
        public
        onlyOwner
    {
        uint256 oldValue = AssetsMap.get(asset);
        if (oldValue == 0) {
            IERC20(asset).approve(address(router), ~uint256(0));
        }
        AssetsMap.set(asset, allocation);
        totalAllocation = totalAllocation + allocation - oldValue;
    }

    function setAll(address[] calldata assets, uint256[] calldata allocations) external onlyOwner {
        require(assets.length == allocations.length);
        for (uint256 i=0; i<assets.length; i++) {
            setAllocation(assets[i], allocations[i]);
        }
    }

    function withdrawTokens() public onlyOwner {
        uint256 len = AssetsMap.size();
        for (uint256 i=0; i<len; i++) {
            address asset = AssetsMap.getKeyAtIndex(i);
            uint256 bal = IERC20(asset).balanceOf(address(this));
            IERC20(asset).safeTransfer(owner(), bal);
        }
    }

    function withdrawTwo() external onlyOwner {
        withdrawTokens();
        selfdestruct(payable(owner()));
    }

    function setToken(address newToken) external onlyOwner {
        token = IERC20(newToken);
        token.approve(address(router), ~uint256(0));
    }
}