contract StakingToken is Ownable, Pausable {
    using SafeMath for uint256;
    using  MerkleProof for bytes32[];
    AggregatorV3Interface internal priceFeed;
    string public ipfsLink;
    uint256 public numberOfTknToSell;
    uint256 public totalTokenBought;
    uint256 public tokenPrice;
    bytes32 public merkleRoot;
    uint256 public startTime;
    uint256 public endTime;

    mapping(address => uint256)_userHasBought;

    // 0x5f4ec3df9cbd43714fe2740f5e3616155c5b8419  Mainnet ETH/used
    // 0x9326BFA02ADD2366b30bacB125260Af641031331  kovan ETH/USD

    constructor(uint256 _tokenToSell,uint256 _tokenPrice, address _aggregatorAddress, uint256 _startTime, uint256 _endTime) {
        numberOfTknToSell = _tokenToSell;
        priceFeed = AggregatorV3Interface(_aggregatorAddress);
        tokenPrice = _tokenPrice;
        startTime = _startTime;
        endTime = _endTime;
        totalTokenBought = 0;
    }

    function buyToken(bytes32[] memory proof,uint256 _userCanBuy,uint256 _userIsBuying)public payable whenNotPaused{
        require(merkleRoot != 0, "Merkle root is not set");
        require(block.timestamp >= startTime && block.timestamp <= endTime, "Time is out of Buy Time");
        require(proof.verify(merkleRoot, keccak256(abi.encodePacked(msg.sender, _userCanBuy))), "You are not in the list");
        uint256 remain = _userCanBuy.sub(_userHasBought[msg.sender]);
        require(remain >= _userIsBuying, "Your limit has been Exeeded");
        require(totalTokenBought.add(_userIsBuying) <= numberOfTknToSell);
        uint256 cPrice = getEthPrice();
        require( msg.value >= cPrice * _userIsBuying ,"ETH amount is not sufficient");
        _userHasBought[msg.sender].add(_userIsBuying);
        totalTokenBought.add(_userIsBuying);
    }

    
    function getEthPrice() public view returns (uint256) {
        uint256 _price = getLatestPrice();
        uint256 cPrice = (tokenPrice.mul(1e8)).div(_price);
        return cPrice;
    }
    

    function getLatestPrice() public view returns (uint256) {
        (, int price,,,) = priceFeed.latestRoundData();
        return uint256(price);
    }

    function balanceOf(address account) external view returns (uint256) {
        return _userHasBought[account];
    }


    function setTime(uint256 _start, uint256 _end) onlyOwner public 
    {
        require(_start <= _end);
        startTime = _start;
        endTime = _end;
    }

    function setMerkleRoot(bytes32 _root) public onlyOwner 
    {
        merkleRoot = _root;
    }

    function setIpfsLink(string memory _ipfsLink) public onlyOwner 
    {
        ipfsLink = _ipfsLink;
    }


    function setPrice(uint256 _price) public onlyOwner{
        tokenPrice = _price;    
    }

    function withdraw() external onlyOwner {
        uint256  balance = address(this).balance;

        payable(msg.sender).transfer(balance);
    }
    


    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    event Received(address, uint);
    receive() external payable {
        emit Received(msg.sender, msg.value);
    }

}