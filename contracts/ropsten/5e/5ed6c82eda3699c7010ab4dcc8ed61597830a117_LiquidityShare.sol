abstract contract Context {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        return msg.data;
    }
}


abstract contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor() {
        _transferOwnership(_msgSender());
    }

    function owner() public view virtual returns (address) {
        return _owner;
    }

    modifier onlyOwner() {
        require(owner() == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        _transferOwnership(address(0));
    }

    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        _transferOwnership(newOwner);
    }

    function _transferOwnership(address newOwner) internal virtual {
        address oldOwner = _owner;
        _owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
}

contract LiquidityShare is Ownable {
    address public token;
    address public uniswapV2Pair;
    address[] lpOwner;
    mapping(address => uint256) balance;
    uint256 public minToDeal;
    uint256 public minToTrans;
    uint32 public lastTime;

    uint256 totalLp;
    uint256 totalOwner;
    uint256 totalBonus;
    uint256 dealOwner;

    bool lock = false;

    modifier onlyToken() {
        require(_msgSender() == token, "LiquidityShare: only token");
        _;
    }

    modifier lockDeal() {
        require(!lock, "LiquidityShare: locked");
        lock = true;
        _;
        lock = false;
    }

    function init(address _token, address _uniswapV2Pair, uint256 _minToDeal, uint256 _minToTrans) external {
        require(token == address(0) && uniswapV2Pair == address(0), "LiquidityShare: Already initialized");

        token = _token;
        uniswapV2Pair = _uniswapV2Pair;
        minToDeal = _minToDeal;
        minToTrans = _minToTrans;
    }

    function addLpOwner(address _lpOwner) external onlyToken {
        lpOwner.push(_lpOwner);
    }

    function countLpShare() external lockDeal {
        if (dealOwner < totalOwner) {
            _countLpShare();
        } else {
            uint256 total = IERC20(token).balanceOf(address(this));
            if (total >= minToDeal) {
                totalLp = IUniswapV2Pair(uniswapV2Pair).totalSupply();
                totalOwner = lpOwner.length;
                totalBonus = total;
                dealOwner = 0;

                _countLpShare();
            }
        }
    }

    function _countLpShare() private {
        uint256 i;
        for ( ; i < 100 && i < totalOwner - dealOwner ; i++) {
            address owner = lpOwner[i];
            uint256 lp = IUniswapV2Pair(uniswapV2Pair).balanceOf(owner);
            if (lp > 0) {
                uint256 bonus = totalBonus * lp / totalLp;
                if (balance[owner] > 0) {
                    bonus += balance[owner];
                }

                if (bonus >= minToTrans) {
                    Address.functionCall(token, abi.encodeWithSelector(0xa9059cbb, owner, bonus));
                    if (balance[owner] > 0) {
                        balance[owner] = 0;
                    }
                } else {
                    balance[owner] += bonus;
                }
            }
        }

        dealOwner = i;
        if (dealOwner == totalOwner) {
            lastTime = uint32(block.timestamp);
        }
    }
}