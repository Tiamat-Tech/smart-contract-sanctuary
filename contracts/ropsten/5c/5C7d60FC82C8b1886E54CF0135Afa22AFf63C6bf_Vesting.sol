contract Vesting {
    using SafeMath for uint256;

    address public owner;
    uint public id;
    struct ClientData {
        address token;
        address reciever;
        address sender;
        uint256 amount;
        uint256 mintTime;
        uint256 time;
        uint256 rewardAmount;
    }
    mapping(uint => ClientData) public clients;

    constructor() {
        owner = msg.sender;
        id = 0;
    }

    function mint(address token, address to, uint256 amount, uint256 time) external {
       id += 1; 
       clients[id] = ClientData({token:token, reciever: to, sender: msg.sender, amount: amount, mintTime: block.timestamp, time: time, rewardAmount: 0});
       TransferHelper.safeTransferFrom(token, msg.sender, address(this), amount);

    }

    function redeem(uint sheduleId) external {
        ClientData memory client = clients[sheduleId];
        require(client.reciever == msg.sender, "Not reciever!");
        require(block.timestamp - client.mintTime < client.time, "over time!");
        uint256 amount = client.amount * (block.timestamp - client.mintTime) / client.time;
        client.amount -= amount;
        TransferHelper.safeTransferFrom(client.reciever, address(this), msg.sender, amount);
    }
}